<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joao.calculei">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SignInActivity"></activity>
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/FullscreenTheme">
        </activity>
        <activity
            android:name=".ui.TelaInicial"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.TelaJogo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tela_jogo"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ui.TelaRanking"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tela_ranking"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ui.TelaConfig"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tela_config"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>